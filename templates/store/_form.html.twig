{{ form_start(form, {'attr': {'class': 'form no-background' } } )}}
                  
    <div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
    </div>
    <div class="form-group has-success m-t-15 m-b-10 row">
        {{ form_label(form.name, 'Name', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
        <div class="col-8">
        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
        </div>
    </div>
    <div class="form-group has-success m-t-15 m-b-10 row">
        {{ form_label(form.street, 'Street', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
        <div class="col-8">
        {{ form_widget(form.street, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
        </div>
    </div>
    <div class="form-group has-success m-t-15 m-b-10 row">
        {{ form_label(form.city, 'City', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
        <div class="col-8">
        {{ form_widget(form.city, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
        </div>
    </div>
    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}"
    >
    <div class="form-group has-success m-t-15 m-b-10 row">
    <div class="col-10"></div>
    <div class="col-2">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-rounded  waves-effect waves-light btn-outline-primary font-12'}}) }}
    </div>
    </div>

{{ form_end(form)}}