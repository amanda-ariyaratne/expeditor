{% extends 'base.html.twig' %}

{% block title %}DriverAssistant index{% endblock %}

{% block body %}
    <h1>DriverAssistant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NIC</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Deleted_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver_assistant in driver_assistants %}
            <tr>
                <td>{{ driver_assistant.id }}</td>
                <td>{{ driver_assistant.NIC }}</td>
                <td>{{ driver_assistant.firstName }}</td>
                <td>{{ driver_assistant.lastName }}</td>
                <td>{{ driver_assistant.createdAt ? driver_assistant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ driver_assistant.updatedAt ? driver_assistant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ driver_assistant.deletedAt ? driver_assistant.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('driver_assistant_show', {'id': driver_assistant.id}) }}">show</a>
                    <a href="{{ path('driver_assistant_edit', {'id': driver_assistant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('driver_assistant_new') }}">Create new</a>
{% endblock %}
