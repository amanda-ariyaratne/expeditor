{{ form_start(form, {'attr': {'class': 'form no-background' } } )}}
                  
    <div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
    </div>
    <div class="form-group has-success m-t-15 m-b-10 row">
        {{ form_label(form.name, 'Description', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
        <div class="col-8">
        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
        </div>
    </div>
    
    <div class="form-group has-success m-t-15 m-b-10 row">
        {{ form_label(form.map, 'Get direction', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'}, 'errors': [] }) }}
        
        <div class="col-8">
            {{ form_widget(form.map, {'attr': {'class': 'form-control form-control-success text-success', 'id': 'inlineFormCustomSelect'}}) }}
        </div>
        
    </div>
    {% if form.map %}
    <a href="{{ truck_route.map }}" target="_blank" class="plus-icon pull-left">
        <i class="fa fa-map-marker"></i>
    </a> 
    {% else %}
    <a href="https://www.google.com/maps/dir///@6.7982728,79.9114845,13.43z/data=!4m2!4m1!3e0!5m1!1e1" target="_blank" class="plus-icon pull-left">
        <i class="fa fa-map-marker"></i>
    </a> 
    {% endif %}
    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}"
    >

    <div class="form-group has-success m-t-15 m-b-10 row">
    <div class="col-10"></div>
    <div class="col-2">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-rounded  waves-effect waves-light btn-outline-primary font-12'}}) }}
    </div>
    </div>

{{ form_end(form)}}
