{% extends 'base.html.twig' %}

{% block title %}Create Store Manager{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('back/css/bootstrap4.2.1.min.css') }}" rel="stylesheet">
  <!-- page css -->
  <link href="{{ asset('back/css/login-register-lock.css') }}" rel="stylesheet">
  <!-- Custom CSS -->
  <link href="{{ asset('back/css/master-stylesheet.css') }}" rel="stylesheet">
  <link href="{{ asset('back/css/style2.css') }}"   rel="stylesheet">
{% endblock %}

{% block scripts %}

  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <script src="{{ asset('back/js/jquery3.2.0.min.js') }}"></script>

  <!-- Bootstrap tether Core JavaScript -->
  <script src="{{ asset('back/js/popper.min.js') }}"></script>
  <script src="{{ asset('back/js/bootstrap4.2.1.min.js') }}"></script>

  <!--Custom JavaScript -->
  <script>
  $(function() {
  $(".preloader").fadeOut();
  });
  $(function() {
  $('[data-toggle="tooltip"]').tooltip()
  });

  // ============================================================== 
  // Login and Recover Password 
  // ============================================================== 
  $('#to-recover').on("click", function() {
  $("#loginform").slideUp();
  $("#recoverform").fadeIn();
  });
  </script>

{% endblock %}

{% block content %}
<div class="container-fluid">


<!-- ============================================================== --> 
<!-- Start Page Content --> 
<!-- ============================================================== -->
<div class="row">
    <div class="col-lg-3 col-md-12">
        
    </div>
    <div class="col-lg-6 col-md-12">
        <div class="card ">
            <div class="card-body">
                <h4 class="card-title text-uppercase mb-20">
                    NEW STORE MANAGER
                </h4>
                <h6 class="card-subtitle m-b-5">
                    You can register a new store manager. Give the manager a *temporary password.
                </h6>
                {{ form_start(form, {'attr': {'class': 'form no-background'} }) }}

                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.user.first_name, 'First Name', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.user.first_name, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.user.last_name, 'Last Name', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.user.last_name, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.user.email, 'Email', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.user.email, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.nic, 'NIC Number', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.nic, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.service_no, 'Serivce ID', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.service_no, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.store_id, 'Assigned Store', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'}, 'errors': [] }) }}
                    <div class="col-8">
                        {{ form_widget(form.store_id, {'attr': {'class': 'form-control form-control-success text-success', 'id': 'inlineFormCustomSelect'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.user.password.first, 'Password', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.user.password.first, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    <div class="form-group has-success m-t-15 m-b-10 row">
                        {{ form_label(form.user.password.second, 'Confirm Password', { 'label_attr': {'class': 'form-control-label col-4 col-form-label text-dark weight-500'} }) }}
                    <div class="col-8">
                        {{ form_widget(form.user.password.second, {'attr': {'class': 'form-control form-control-success text-success'}}) }}
                    </div>
                    </div>

                    

                    <div class="form-group has-success m-t-15 m-b-10 row">
                    <div class="col-10"></div>
                    <div class="col-2">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-rounded  waves-effect waves-light btn-outline-primary font-12'}}) }}
                    </div>
                    </div>              
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-12">
    </div>
</div>
</div>

{% endblock content %}


        
